{
  "name": "intakeformulier-app",
  "version": "1.0.0",
  "description": "Moderne web applicatie ter vervanging van Excel intakeformulier",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "build:server": "cd server && npm run build",
    "start": "cd server && npm start",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "postinstall": "npm run install-all",
    "deploy:frontend": "cd client && vercel --prod",
    "deploy:backend": "cd server && vercel --prod",
    "deploy:all": "./deploy.sh"
  },
  "keywords": ["intakeformulier", "sharepoint", "react", "nodejs"],
  "author": "Patrick Holterman",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
